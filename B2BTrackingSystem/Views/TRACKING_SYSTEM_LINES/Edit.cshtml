@model B2BTrackingSystem.Models.TRACKING_SYSTEM_LINES

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>追蹤明細</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.HEADER_TRACKING_NUM)

        <div class="well">
            <div class="row">
                <div class="col-md-6 form-group">
                    <label class="col-lg-3 control-label">明細號碼:</label>
                    <div class="col-lg-8">
                        @Html.EditorFor(model => model.TRACKING_LINE_NUM, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.TRACKING_LINE_NUM, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-6 form-group">
                    <label class="col-lg-3 control-label">處理日期:</label>
                    <div class="col-lg-8">
                        @Html.EditorFor(model => model.PROCESSING_DATE, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.PROCESSING_DATE, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 form-group">
                    <label class="col-lg-3 control-label">處理人員:</label>
                    <div class="col-lg-8">
                        @Html.EditorFor(model => model.ASSIGN_PEOPLE, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ASSIGN_PEOPLE, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 form-group">
                    <label class="col-lg-3 control-label">狀況說明:</label>
                    <div class="col-lg-8">
                        @Html.EditorFor(model => model.CUSTOMER_REPLY, new { htmlAttributes = new { style = "width: 250%; max-width: 250%;", @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CUSTOMER_REPLY, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-5 col-md-10">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </div>

        </div>

    </div>
}

<div>

    @Html.ActionLink("回追蹤問題列表", "Details", "TRACKING_SYSTEM_HEADS", new { id = Model.HEADER_TRACKING_NUM }, null)

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
